<Window x:Class="oti_cost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:oti_cost"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized"  >
    <Grid>
        <Image Stretch="Fill" Source="./image/J5.jpg"  ></Image>

        <Grid ShowGridLines="False" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="111*"></ColumnDefinition>
                <ColumnDefinition Width="110*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="268*"></ColumnDefinition>
                <ColumnDefinition Width="268*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>

            <Button Content="بــطــاقـة مــحــرك" FlowDirection="RightToLeft" Grid.Column="3" Grid.Row="2" Background="#599DCC"  HorizontalContentAlignment="Center" VerticalAlignment="Top" Foreground="Black" Height="55" Name="engine_card" Click="engine_card_Click" FontSize="25" BorderBrush="Black" ></Button>
            <Button Content=" بــطــاقـة مــشــروع " FlowDirection="RightToLeft" Grid.Column="3" Grid.Row="3" Background="#CA995B" HorizontalContentAlignment="Center" VerticalAlignment="Top" Foreground="Black" Height="55" Name="jhv"  FontSize="25" Click="jhv_Click" BorderBrush="Black" ></Button>
            <Button Visibility="Visible"  Content="حــسـاب تــكــلـفــة مــشــروع " FlowDirection="RightToLeft" Grid.Column="3" Grid.Row="4" Background="#CF4152" HorizontalContentAlignment="Center" VerticalAlignment="Top" Foreground="Black" Height="55" Click="Button_Click"  FontSize="22" BorderBrush="Black" ></Button>
        </Grid>
    </Grid>

</Window>

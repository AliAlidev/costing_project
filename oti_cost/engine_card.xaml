<Window x:Class="oti_cost.engine_card"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 

        xmlns:local="clr-namespace:oti_cost"
        mc:Ignorable="d"
        Title="engine_card"  WindowState="Maximized"  Width="1600" Height="900" >
    <Grid >
        <Image   Stretch="Fill" Source="./image/aa.jpg" />
        <Grid ShowGridLines="False">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="707*"></ColumnDefinition>
                <ColumnDefinition Width="792*"></ColumnDefinition>
                <ColumnDefinition Width="93*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="2" Grid.RowSpan="9" Grid.Column="1" Background="White" BorderBrush="GhostWhite" BorderThickness="3" >
            <!--<Border Grid.Row="2" Grid.RowSpan="9" Grid.Column="1" CornerRadius="50" Background="White" BorderBrush="#94A76D" BorderThickness="3" >-->
                <!--<Border.Effect >
                    <DropShadowEffect Color="#94A76D" ShadowDepth="10" />
                </Border.Effect>-->
            </Border>

            <Label Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"  HorizontalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalAlignment="Center" Content="بــطــاقــة مــــحـــــــرك" FontSize="25" FontWeight="Bold"  />
          

            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" FlowDirection="RightToLeft"  Margin="0,0,50,0">

                 <Button Grid.Row="3" Grid.Column="1" Click="add_card_number_Click" Name="add_card_number" VerticalAlignment="Bottom" HorizontalAlignment="Right" FlowDirection="RightToLeft"  Content="إضافة رقم بطاقة " Background="#9EC43D" Foreground="Black"   />
                <TextBox Grid.Row="3" Grid.Column="1"  Name="card_number"  FlowDirection="RightToLeft"  materialDesign:HintAssist.Hint="رقم البطاقة" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Bottom"  VerticalContentAlignment="Center" Margin="50,0,0,0" ></TextBox>

            </StackPanel>


            <TextBox Margin="100,0,50,0" Grid.Row="4" Grid.Column="1"  Name="dept"  FlowDirection="RightToLeft"  materialDesign:HintAssist.Hint="الجهة الطالبة" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
            <TextBox Margin="100,0,50,0" Grid.Row="5" Grid.Column="1"   Name="sender_name"  FlowDirection="RightToLeft"   materialDesign:HintAssist.Hint="المسلم" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
            <TextBox Margin="100,0,50,0"  Grid.Row="6" Grid.Column="1"    Name="receiver_name"  FlowDirection="RightToLeft"   materialDesign:HintAssist.Hint="المستلم" Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextChanged="receiver_name_TextChanged"></TextBox>
            <TextBox Margin="100,0,50,0" Grid.Row="7" Grid.Column="1"    Name="received_date"  FlowDirection="RightToLeft"  materialDesign:HintAssist.Hint="تاريخ الاستلام" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
            <TextBox Margin="100,0,50,0"  Grid.Row="8" Grid.Column="1"    Name="sent_date"  FlowDirection="RightToLeft" materialDesign:HintAssist.Hint="تاريخ التسليم" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>

            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Column="1" Grid.Row="9" HorizontalAlignment="Center">

                <Button VerticalAlignment="Bottom" Width="150" Click="add_Click_2" Name="add" Visibility="Visible"  BorderBrush="Black" Background="#9EC43D" Foreground="Black" Content="اضــافــة" Margin="0,0,50,0"  />

                <Button  VerticalAlignment="Bottom" Width="150"  Click="cancel_Click" Name="cancel" Visibility="Visible"  BorderBrush="Black" Background="#CA995B" Foreground="Black" Content="إلـــــغـــــاء"    />

            <!--<Button VerticalAlignment="Bottom" Width="150" Name="add_engine_info" Click="add_engine_info_Click" Visibility="Visible"  BorderBrush="Black" Background="#9EC43D" Foreground="Black" Content="إضافة بيانات المحرك" Margin="50,0,0,0"   />-->
            </StackPanel>
            <Button VerticalAlignment="Bottom" Width="150" Name="add_engine_info" Click="add_engine_info_Click" Visibility="Visible"  BorderBrush="Black" Background="#9EC43D" Foreground="Black" Content="إضافة بيانات المحرك" Grid.Column="0" Grid.Row="5"   />
            <Button VerticalAlignment="Bottom" Width="150" Name="result" Click="result_Click" Visibility="Visible"  BorderBrush="Black" Background="#9EC43D" Foreground="Black" Content="  نتائج اختبار المحرك  " Grid.Column="0" Grid.Row="7"   />




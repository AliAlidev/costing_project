<Window x:Class="oti_cost.works_result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 

        xmlns:local="clr-namespace:oti_cost"
        mc:Ignorable="d"
        Title="works_result" Height="450" Width="800">
    <Grid>
        <Image Source="/image/rr.png" Stretch="Fill" Margin="0,0,2,-30"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="41*"></ColumnDefinition>
                <ColumnDefinition Width="91*"></ColumnDefinition>
                <ColumnDefinition Width="83*"></ColumnDefinition>
                <ColumnDefinition Width="49*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="88*"></RowDefinition>
                <RowDefinition Height="56*"></RowDefinition>
                <RowDefinition Height="89*"></RowDefinition>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="49*"></RowDefinition>
            </Grid.RowDefinitions>


            <Border Grid.Row="1" Grid.RowSpan="6" Background="White" BorderBrush="#94A76D" BorderThickness="3" Grid.ColumnSpan="4" Margin="124,1,148,-11" />
            <Label Grid.Row="2" VerticalContentAlignment="Center" FontWeight="DemiBold" Content="  "  FontSize="16"  Foreground="#0063C0" FlowDirection="RightToLeft" HorizontalAlignment="Center" Margin="-56,1,234,0" Width="218" Grid.ColumnSpan="2"   />

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1"  FlowDirection="RightToLeft" Margin="35,0,20,1" VerticalAlignment="Bottom" Height="40" Grid.ColumnSpan="2">

                <Label  Content="رقم البطاقة : " FlowDirection="RightToLeft" VerticalAlignment="Center" HorizontalAlignment="Right" ></Label>
                <TextBox Name="card_number" Text=" " Focusable="False" IsReadOnly="True" HorizontalContentAlignment="Center" Width="101" BorderBrush="Transparent" BorderThickness="0"></TextBox>
            </StackPanel>
            <TextBox Padding="10,20,0,0" TextWrapping="Wrap" Grid.Column="1" Grid.Row="2"
VerticalScrollBarVisibility="Visible"
AcceptsReturn="True" BorderBrush="WhiteSmoke" BorderThickness="3" Margin="35,0,30,0"  x:Name="resultafter"  materialDesign:HintAssist.Hint="تـــــوصـــــيـــــف الـــعــــمـــل ............................................" Text="" VerticalContentAlignment="Top"  FontSize="16" FlowDirection="RightToLeft" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.ColumnSpan="2"  />

            <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" FontSize="16"  Margin="153,8,34,5"  x:Name="hour_work" materialDesign:HintAssist.Hint=" عدد ساعات العمل " Style="{StaticResource MaterialDesignFloatingHintTextBox}"  FlowDirection="RightToLeft" Height="43" Grid.ColumnSpan="2"  />
            <!--<TextBox Grid.Row="4" Grid.Column="1" VerticalAlignment="Top" VerticalContentAlignment="Top" x:Name="notes" FontSize="16"  Margin="35,0,20,0" materialDesign:HintAssist.Hint="ملاحظات " Style="{StaticResource MaterialDesignFloatingHintTextBox}"   FlowDirection="RightToLeft"  TextWrapping="Wrap"
VerticalScrollBarVisibility="Visible" 
AcceptsReturn="True" Height="76" Grid.ColumnSpan="2" />-->
            <TextBox Padding="10,20,0,0" TextWrapping="Wrap" Grid.Column="1" Grid.Row="4"
VerticalScrollBarVisibility="Visible"
AcceptsReturn="True" BorderBrush="WhiteSmoke" BorderThickness="3" Margin="41,3,21,1"  x:Name="notes"  materialDesign:HintAssist.Hint=" مــــــــــــلاحــــظـــات...................................................." Text="" VerticalContentAlignment="Top"  FontSize="16" FlowDirection="RightToLeft" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.ColumnSpan="2"  />


            <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1"  HorizontalAlignment="Center" FlowDirection="RightToLeft"  Width="348" Grid.ColumnSpan="2" Margin="87,0"   >

                <Button x:Name="add" Click="add_Click" BorderBrush="Black" Content="حفظ" Margin="0,7,100,7" Width="85" Background="#599DCC"  Foreground="Black"  FontSize="20" Height="36" ></Button>

                <Button Content="اغــلاق" Name="delete" Click="delete_Click"  BorderBrush="Black" Width="96" Background="#FBB634"  Foreground="Black" FontSize="20" Margin="0,7" Height="36" ></Button>
            </StackPanel>


        </Grid>

    </Grid>
</Window>
